@model IEnumerable<QuintessenceDataServer.Models.Item.SimpleItem>

@{
    ViewBag.Title = "Item List";
}
<br />
<h2 >Items</h2>

<p>
    <!--@Html.ActionLink("Create New", "Create")-->
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th style="width: 150px;">Name</th>
            <th class="th-lg">Description</th>
            <th style="width: 150px;">Modify</th>
        </tr>
    </thead>
    @foreach (var item in Model) {
        <tr onclick="location.href='@Url.Action("Details", "Item", new { id = item.ItemID })'">
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.ItemID  }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.ItemID  })
            </td>
        </tr>
    }

</table>
